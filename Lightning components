	mode: 'sticky',
	message: 'This is a required message',
	messageTemplate: 'Record {0} created! See it {1}!',
	messageTemplateData: ['Salesforce', {
	    url: 'http://www.salesforce.com/',
	    label: 'here',
	    }
	]
});
toastEvent.fire();


